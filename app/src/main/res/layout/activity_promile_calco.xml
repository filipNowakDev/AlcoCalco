<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.filip.alcocalco.PromileCalco">

    <EditText
        android:id="@+id/volumeEdit"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/millitersLabel"
        app:layout_constraintRight_toLeftOf="@+id/millitersLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/millitersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/ml"
        app:layout_constraintBaseline_toBaselineOf="@+id/percentsEdit"
        app:layout_constraintLeft_toRightOf="@+id/volumeEdit"
        app:layout_constraintRight_toLeftOf="@+id/percentsEdit"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <EditText
        android:id="@+id/percentsEdit"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/percentsLabel"
        app:layout_constraintLeft_toRightOf="@+id/millitersLabel"
        app:layout_constraintRight_toLeftOf="@+id/percentsLabel"
        android:layout_marginEnd="8dp"/>


    <TextView
        android:id="@+id/percentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="@string/alc_label"
        app:layout_constraintLeft_toRightOf="@+id/percentsEdit"
        app:layout_constraintBaseline_toBaselineOf="@+id/addButton"
        app:layout_constraintRight_toLeftOf="@+id/addButton"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@string/add"
        android:onClick="addDrink"
        app:layout_constraintLeft_toRightOf="@+id/percentsLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"/>

    <ListView
        android:id="@+id/drinkListView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/percentsEdit"/>

</android.support.constraint.ConstraintLayout>
